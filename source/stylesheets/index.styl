@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')
@import url('https://fonts.googleapis.com/css?family=Poiret+One');
@import url('https://fonts.googleapis.com/css?family=Bad+Script');
@import url('https://fonts.googleapis.com/css?family=Dawning+of+a+New+Day');

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family 'Source Code Pro', monospace

.header
  background url('http://i.imgur.com/bdcN0ns.jpg')
  overflow-y hidden 
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  height: 700px

  .page-title
    position:absolute;
    bottom:100 px;
    font-weight 200
    font-size 80px
    text-align right
    padding 25px
    text-transform uppercase
    color #fff
    font-family 'Poiret One'

  .page-subtitle
    position:absolute;
    bottom:0px;
    font-weight 100
    font-size 40px
    text-align right
    padding 25px
    text-transform uppercase
    color #fff



.nav
  background #FFF
  text-align center

  li
    display inline-block

  a
    display inline-block
    padding 20px
    color #000
    text-decoration none

    &:hover
      background-color #3AB795
      text-decoration underline

.main-content
  margin 50px auto
  max-width 600px

  p
    line-height 1.6
    margin-bottom 1.7em

.footer
  margin 50px auto
  max-width 600px
  border-top 1px solid #444
  padding 20px 0

  p
    color #444
    font-size 12px
